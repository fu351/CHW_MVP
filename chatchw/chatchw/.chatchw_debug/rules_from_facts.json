{
  "rules": [
    {
      "rule_id": "danger_signs_any_refer_hospital",
      "when": [
        {
          "any_of": [
            {
              "sym": "any_danger_sign",
              "eq": true
            },
            {
              "sym": "danger_signs_present",
              "eq": true
            },
            {
              "sym": "convulsions",
              "eq": true
            },
            {
              "sym": "convulsions_present",
              "eq": true
            },
            {
              "sym": "unusually_sleepy_or_unconscious",
              "eq": true
            },
            {
              "sym": "unusually_sleepy_or_unconscious_present",
              "eq": true
            },
            {
              "sym": "not_able_to_drink_or_feed_anything",
              "eq": true
            },
            {
              "sym": "not_able_to_drink_or_feed_anything_present",
              "eq": true
            },
            {
              "sym": "vomits_everything",
              "eq": true
            },
            {
              "sym": "vomits_everything_present",
              "eq": true
            },
            {
              "sym": "chest_indrawing",
              "eq": true
            },
            {
              "sym": "chest_indrawing_present",
              "eq": true
            }
          ]
        }
      ],
      "then": {
        "triage": "hospital",
        "flags": [
          "danger_sign"
        ],
        "reasons": [
          "danger_sign_present"
        ],
        "actions": [
          {
            "id": "refer_urgently_to_health_facility",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p138",
        "priority": 100
      }
    },
    {
      "rule_id": "prolonged_symptoms_referral",
      "when": [
        {
          "any_of": [
            {
              "all_of": [
                {
                  "sym": "cough_present",
                  "eq": true
                },
                {
                  "obs": "cough_duration_days",
                  "op": "ge",
                  "value": 14
                }
              ]
            },
            {
              "all_of": [
                {
                  "sym": "diarrhoea_present",
                  "eq": true
                },
                {
                  "obs": "diarrhoea_duration_days",
                  "op": "ge",
                  "value": 14
                }
              ]
            },
            {
              "all_of": [
                {
                  "sym": "fever_present",
                  "eq": true
                },
                {
                  "obs": "fever_duration_days",
                  "op": "ge",
                  "value": 7
                }
              ]
            },
            {
              "sym": "blood_in_stool",
              "eq": true
            },
            {
              "obs": "blood_in_stool_present",
              "op": "eq",
              "value": true
            }
          ]
        }
      ],
      "then": {
        "triage": "hospital",
        "flags": [
          "refer"
        ],
        "reasons": [
          "prolonged_or_bloody_symptoms"
        ],
        "actions": [
          {
            "id": "refer_child_urgently",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p52",
        "priority": 90
      }
    },
    {
      "rule_id": "diarrhoea_uncomplicated_home_treat",
      "when": [
        {
          "all_of": [
            {
              "sym": "diarrhoea_present",
              "eq": true
            },
            {
              "obs": "diarrhoea_duration_days",
              "op": "lt",
              "value": 14
            },
            {
              "sym": "blood_in_stool",
              "eq": false
            },
            {
              "obs": "blood_in_stool_present",
              "op": "eq",
              "value": false
            },
            {
              "sym": "any_danger_sign",
              "eq": false
            }
          ]
        }
      ],
      "then": {
        "triage": "home",
        "flags": [
          "diarrhoea_less_than_14_days_no_blood"
        ],
        "reasons": [
          "acute_non_bloody_diarrhoea"
        ],
        "actions": [
          {
            "id": "give_ors_now_help_caregiver",
            "if_available": true
          },
          {
            "id": "give_zinc_supplement_1_dose_daily_for_10_days_first_dose_now",
            "if_available": true
          },
          {
            "id": "provide_2_packets_of_ors_to_take_home",
            "if_available": true
          },
          {
            "id": "schedule_follow_up_in_3_days",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p60",
        "priority": 50
      }
    },
    {
      "rule_id": "fever_lt7d_in_malaria_area_rdt_and_treat",
      "when": [
        {
          "all_of": [
            {
              "sym": "fever_present",
              "eq": true
            },
            {
              "obs": "fever_duration_days",
              "op": "lt",
              "value": 7
            },
            {
              "sym": "malaria_area",
              "eq": true
            },
            {
              "sym": "any_danger_sign",
              "eq": false
            }
          ]
        }
      ],
      "then": {
        "triage": "home",
        "flags": [
          "suspected_malaria"
        ],
        "reasons": [
          "fever_less_than_7_days_in_a_malaria_area"
        ],
        "actions": [
          {
            "id": "perform_rapid_diagnostic_test_RDT_for_malaria",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p45",
        "priority": 60
      }
    },
    {
      "rule_id": "fever_lt7d_rdt_positive_treat_malaria",
      "when": [
        {
          "all_of": [
            {
              "sym": "fever_present",
              "eq": true
            },
            {
              "obs": "fever_duration_days",
              "op": "lt",
              "value": 7
            },
            {
              "sym": "malaria_area",
              "eq": true
            },
            {
              "obs": "malaria_rdt_result",
              "op": "eq",
              "value": "positive"
            }
          ]
        }
      ],
      "then": {
        "triage": "home",
        "flags": [
          "malaria_rdt_positive"
        ],
        "reasons": [
          "rdt_positive_for_malaria"
        ],
        "actions": [
          {
            "id": "treat_with_an_antimalarial",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p45",
        "priority": 70
      }
    },
    {
      "rule_id": "cough_and_fast_breathing_pneumonia_treat",
      "when": [
        {
          "all_of": [
            {
              "sym": "cough_present",
              "eq": true
            },
            {
              "sym": "fast_breathing",
              "eq": true
            },
            {
              "sym": "chest_indrawing",
              "eq": false
            },
            {
              "sym": "any_danger_sign",
              "eq": false
            }
          ]
        }
      ],
      "then": {
        "triage": "clinic",
        "flags": [
          "pneumonia_suspected"
        ],
        "reasons": [
          "cough_with_fast_breathing"
        ],
        "actions": [
          {
            "id": "treat_with_amoxicillin",
            "if_available": true
          },
          {
            "id": "schedule_follow_up_in_3_days",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p45",
        "priority": 80
      }
    },
    {
      "rule_id": "fast_breathing_age_thresholds_flag",
      "when": [
        {
          "any_of": [
            {
              "all_of": [
                {
                  "obs": "age_months",
                  "op": "ge",
                  "value": 2
                },
                {
                  "obs": "age_months",
                  "op": "lt",
                  "value": 12
                },
                {
                  "obs": "breaths_per_minute",
                  "op": "ge",
                  "value": 50
                }
              ]
            },
            {
              "all_of": [
                {
                  "obs": "age_months",
                  "op": "ge",
                  "value": 12
                },
                {
                  "obs": "age_months",
                  "op": "lt",
                  "value": 60
                },
                {
                  "obs": "breaths_per_minute",
                  "op": "ge",
                  "value": 40
                }
              ]
            }
          ]
        }
      ],
      "then": {
        "triage": "clinic",
        "flags": [
          "fast_breathing"
        ],
        "reasons": [
          "age_specific_tachypnoea"
        ],
        "actions": [],
        "advice": [],
        "guideline_ref": "p125",
        "priority": 50
      }
    },
    {
      "rule_id": "muac_red_or_oedema_referral",
      "when": [
        {
          "any_of": [
            {
              "obs": "muac_strap_colour",
              "op": "eq",
              "value": "Red"
            },
            {
              "obs": "muac_color",
              "op": "eq",
              "value": "RED"
            },
            {
              "sym": "swelling_of_both_feet",
              "eq": true
            },
            {
              "obs": "swelling_of_both_feet_present",
              "op": "eq",
              "value": true
            }
          ]
        }
      ],
      "then": {
        "triage": "hospital",
        "flags": [
          "severe_acute_malnutrition_suspected"
        ],
        "reasons": [
          "red_muac_or_bilateral_oedema"
        ],
        "actions": [
          {
            "id": "refer_child_for_severe_malnutrition_care",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p49",
        "priority": 95
      }
    },
    {
      "rule_id": "muac_yellow_mam_actions",
      "when": [
        {
          "any_of": [
            {
              "obs": "muac_strap_colour",
              "op": "eq",
              "value": "Yellow"
            },
            {
              "obs": "muac_color",
              "op": "eq",
              "value": "YELLOW"
            },
            {
              "obs": "muac_reading",
              "op": "eq",
              "value": "YELLOW"
            }
          ]
        }
      ],
      "then": {
        "triage": "clinic",
        "flags": [
          "moderate_malnutrition_possible"
        ],
        "reasons": [
          "yellow_on_muac_strap"
        ],
        "actions": [
          {
            "id": "counsel_caregiver_on_feeding",
            "if_available": true
          },
          {
            "id": "refer_for_supplemental_feeding_if_community_programme_exists",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p46",
        "priority": 60
      }
    },
    {
      "rule_id": "home_care_if_no_danger_sign",
      "when": [
        {
          "any_of": [
            {
              "sym": "any_danger_sign",
              "eq": false
            },
            {
              "sym": "danger_signs_present",
              "eq": false
            }
          ]
        }
      ],
      "then": {
        "triage": "home",
        "flags": [
          "treat_at_home"
        ],
        "reasons": [
          "no_danger_sign"
        ],
        "actions": [
          {
            "id": "treat_at_home_and_advise_caregiver",
            "if_available": true
          },
          {
            "id": "schedule_follow_up_in_3_days",
            "if_available": true
          }
        ],
        "advice": [],
        "guideline_ref": "p120",
        "priority": 10
      }
    }
  ]
}